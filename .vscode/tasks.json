{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: Build Cassino",
            "command": "/usr/bin/gcc-11",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/roulette/roulette.c",
                "${workspaceFolder}/blackjack/blackjack.c",
                "${workspaceFolder}/baccarat/baccarat.c",
                "${workspaceFolder}/common.c",
                "${workspaceFolder}/main.c",
                "-o",
                "${workspaceFolder}/cassino"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task to build cassino."
        }
    ]
}
