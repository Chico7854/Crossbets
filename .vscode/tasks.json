{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: Build Blackjack",
            "command": "/usr/bin/gcc-11",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/blackjack/blackjack.c",
                "${workspaceFolder}/blackjack/main.c",
                "-o",
                "${workspaceFolder}/blackjack/blackjack"
            ],
            "options": {
                "cwd": "${workspaceFolder}/blackjack"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task to build blackjack."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: Build Roulette",
            "command": "/usr/bin/gcc-11",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/roulette/roulette.c",
                "${workspaceFolder}/roulette/main.c",
                "-o",
                "${workspaceFolder}/roulette/roleta"
            ],
            "options": {
                "cwd": "${workspaceFolder}/roulette"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task to build roulette."
        }
    ]
}
